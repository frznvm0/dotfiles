[include]
	path = ~/.user.gitconfig
[core]
	editor = vim
	autocrlf = input
[push]
	default = simple
[color]
	diff = auto
	status = auto
	branch = auto
	ui = always
[pull]
	rebase = true
[grep]
	lineNumber = true
[alias]
	co = checkout
	st = status -sb
	l = log --oneline --decorate --graph
	unstage = reset HEAD --
	amend = commit --amend -C HEAD
	undo = reset --soft HEAD^
